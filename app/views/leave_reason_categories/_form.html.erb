<div class="form-horizontal tasi-form ">
  <%= simple_form_for @leave_reason_category, :html => { :class => 'form-horizontal'}, :remote => true do |f| %>
    <div class="row">
      <%= f.input :name, :input_html => { :class => "col-md-4 input" },:error_html => { :class => 'col-md-6'}, :label_html => { :class => 'col-md-2'}%>
    </div>
    <div class="row">
      <%= f.input :colour, :input_html => { :class => "col-md-4 input" },:error_html => { :class => 'col-md-6'}, :label_html => { :class => 'col-md-2'} %>
    </div>
    <div class="form-group">
      <div class="col-md-6" align="center">        
        <%= f.button :submit, :class => "btn btn-info" %>
        <div id="linkdiv"></div>
      </div>
    </div>
  <% end %>
</div>