<div class="panel panel-success col-md-6">
 <div class="panel-heading">Top Five Improving Employees</div>
  <div class="panel-body">               
    <table class="table table-striped table-hover table-bordered ">
      <tr>
        <th> Employee Name </th>
        <th> Total Rating </th>      
      </tr>
      <% @top_five.keys.each do |topfive| %>
        <tr>
          <td><%= @employees[topfive] %></td>
          <td><%= @top_five[topfive] %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<% if !(@top_five.keys - @last_five.keys).empty? %>
<div class="panel panel-danger col-md-6">
  <div class="panel-heading">Top Five Degrading Employees</div>
  <div class="panel-body">               
    <table class="table table-striped table-hover table-bordered ">
      <tr>
        <th> Employee Name </th>
        <th> Total Rating </th>      
      </tr>
      <% @last_five.keys.each do |lastfive| %>
        <tr>
          <td><%= @employees[lastfive] %></td>
          <td><%= @last_five[lastfive] %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<% end %>